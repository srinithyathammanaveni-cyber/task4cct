{
  "manifest_version": 3,
  "name": "Productivity Tracker",
  "version": "2.0.0",
  "description": "Track time spent on websites and analyze productivity with weekly reports",
  "permissions": [
    "tabs",
    "storage",
    "alarms",
    "idle",
    "notifications",
    "unlimitedStorage"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Productivity Tracker",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "options_page": "options.html"
}